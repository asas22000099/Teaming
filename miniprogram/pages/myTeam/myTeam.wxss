Page {
  height: 100%;
}
.index_container {
  padding: 0 10rpx;
  height: 100%;
  background-color: var(--themeColor);
}
.index_container .index_list {
  height: 100%;
  background-color: var(--themeColor);
}
.index_container .index_list .single_team {
  border-radius: 20rpx;
  /* padding: 10rpx; */
  margin: 10rpx;
  height: 250rpx;
  background-color: whitesmoke;
}
.index_container .index_list .single_team .single_upper {
  display: flex;
  height: 80rpx;
  align-items: center;
  justify-content: center;
}
.index_container .index_list .single_team .single_upper .teamname {
  flex: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* height: 100%; */
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}
.index_container .index_list .single_team .single_upper .isleader {
  flex: 1;
  height: 100%;
}
.index_container .index_list .single_team .single_upper .deadline {
  /* background-color: blanchedalmond; */
  display: flex;
  flex: 2;
  height: 100%;
  justify-content: center;
  align-items: center;
  font-size: 35rpx;
}
.index_container .index_list .single_team .line {
  border: 2rpx dashed #000;
  height: 2rpx;
}
.index_container .index_list .single_team .single_down {
  padding: 10rpx 0;
  width: 100%;
  display: flex;
  height: 150rpx;
}
.index_container .index_list .single_team .single_down .info {
  flex: 12;
  height: 100%;
  background-color: bisque;
  font-size: 35rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-all;
  word-wrap: break-word;
  white-space: pre-line;
}
.index_container .index_list .single_team .single_down .peoplenumber {
  display: flex;
  background-color: #f9d9ff;
  flex: 2;
  height: 100%;
  font-size: 40rpx;
  justify-content: center;
  align-items: center;
}
