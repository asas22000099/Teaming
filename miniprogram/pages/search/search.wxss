/* pages/search/search.wxss */


icon{
  display: flex;
  justify-content: center;
  align-items: center;


}
.search_row {
  margin: 10rpx;
  height: 80rpx;
  display: flex;
  border-radius: 20rpx;
  background-color:white;
  
  justify-content: center;
  align-items: center;

}
.search_row .search_icon{
  border-radius: 10rpx;
  flex: 0.5;
  height: 100%;
  /* background-color: skyblue; */
}
.search_row input {
  /* vertical-align: middle; */
  background-color: #fff;
  flex: 5;
  height: 100%;
  font-size: 30rpx;
  /* padding-left: 60rpx; */
}
.search_row .cancel{
  flex:0.5;
  height: 100%;
  background-color: #fff;
  /* border-radius: 20rpx; */
  /* background-color: seagreen; */
  display: flex;align-self: center;justify-content: center;
  
}
.search_row button {
  border-radius: 20rpx;
  background-color: rgb(231, 228, 228);
  flex:1.2;
  height: 100%;
  padding: 0;
  margin: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
